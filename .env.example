# Global example env file (copy to .env and set values for local dev)

# Backend
# Local Postgres example
DATABASE_URL=postgresql://postgres:password@localhost:5432/audit_app
# Supabase example (replace placeholders). Supabase requires SSL.
# DATABASE_URL=postgresql://postgres:<SUPABASE_DB_PASSWORD>@db.<PROJECT_REF>.supabase.co:6543/postgres?sslmode=require

# Optional: Supabase pooler connection fields (alternative to DATABASE_URL)
# For Transaction Pooler (IPv4-compatible):
# user=postgres.<PROJECT_REF>
# password=<SUPABASE_DB_PASSWORD>
# host=<REGION>.pooler.supabase.com
# port=6543
# dbname=postgres

SECRET_KEY=your-super-secret-key-change-in-production

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=audit-app-documents
AWS_REGION=us-east-1

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFY_EMAIL_TO=alerts@example.com

# Environment
ENVIRONMENT=development